<launch>

	<arg name="rosbag_enabled" default="false"/>
	<arg name="rosbag_prefix_url" default="/tmp"/>

	<arg name="gps_fix_topic" default="gps_fix_topic"/>

	<arg name="utm_fix_topic" default="utm_fix_topic"/>
	<arg name="debug_point_topic" default="debug_point_topic"/>


	<node name="utm_adapter" pkg="nautonomous_pose_utm" type="utm_adapter.py"  output="screen" >
		<remap from="gps_fix_topic" to="$(arg gps_fix_topic)"/>

		<remap from="utm_fix_topic" to="$(arg utm_fix_topic)"/>
		<remap from="debug_point_topic" to="$(arg debug_point_topic)"/>

	</node>

	<node pkg="rosbag" type="record" name="rosbag_pose_utm" args="record -o $(arg rosbag_prefix_url)/pose/utm $(arg gps_fix_topic) $(arg utm_fix_topic) $(arg debug_point_topic)" output="screen" if="$(arg rosbag_enabled)"/>

</launch>
